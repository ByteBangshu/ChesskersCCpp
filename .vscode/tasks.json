{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++-14 build active file",
      "command": "/usr/bin/g++-14",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "-I${workspaceFolder}/include",
        "${workspaceFolder}/src/main.cpp",
        "${workspaceFolder}/src/numberboard.cpp",
        "-o",
        "${workspaceFolder}/build/program"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Compile all cpp files in src folder"
    }
  ],
  "version": "2.0.0"
}